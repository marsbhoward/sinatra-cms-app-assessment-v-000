<h3>
  <% if flash.has?(:message) %>
    <%= flash[:message] %>
  <% end %>
</h3>

<form action="/projects/<%=@project.slug%>/edit" method="POST">

  Project name: <%= @project.project_name %><br>
  Description: <%= @project.description %><br>

  Content: <input type="text" name="content" id="content"><br>
  <input type="submit" name="edit" id="edit" value="edit project"><br>
</form>

<form action="/projects/<%=@project.slug%>/delete" method="POST">
  <input type="submit" name="delete" id="delete" value="delete project">
</form>

<ul>
  <li><a href="/users/index">Your Profile</a></li>
  <li><a href="/projects/projects">Your Projects</a></li>
  <li><a href="/logout">Log Out</a></li>
</ul>
